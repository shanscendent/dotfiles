{{ if eq .chezmoi.os "linux" -}}
#!/bin/bash
packages="tmux jq autossh fzf zoxide lazygit lazydocker fpp fd eza ripgrep yazi trash-cli glow ugrep bat tree rlwrap starship neovim npm go git-delta"
brew update
eval "brew install $packages"
eval "brew upgrade $packages"
brew install --cask font-jetbrains-mono-nerd-font
source ~/.bashrc
