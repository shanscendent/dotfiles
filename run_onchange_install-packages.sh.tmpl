#!/bin/zsh
packages="jq fzf zoxide lazygit lazydocker antidote autossh fpp fd ripgrep yazi glow ugrep bat tree rlwrap"
brew update
eval "brew install $packages"
eval "brew upgrade $packages"
exec zsh
{{ end -}}
