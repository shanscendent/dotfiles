{{ if eq .chezmoi.os "linux" -}}
#!/bin/bash
sudo apt update
sudo apt install tmux jq autossh -y
packages="fzf zoxide lazygit lazydocker fpp fd ripgrep yazi glow ugrep bat tree rlwrap"
brew update
eval "brew install $packages"
eval "brew upgrade $packages"
exec bash
