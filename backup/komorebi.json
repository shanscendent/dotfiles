  "default_workspace_padding": 5,
  "default_container_padding": 5,
  "border": true,
  "border_width": 8,
  "border_offset": -1,
  "border_style": "Rounded",
  "border_colours": {
	"unfocused": "#bcc0cc",
	"single": "#dc8a78",
	"floating": "#d20f39",
	"monocle": "#e64553",
	"stack": "#179299"
